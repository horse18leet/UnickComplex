<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UnickProject</title>  
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>

    <header>
        <nav class="navbar">
            <div class="container">
                <a class="navbar_brand" asp-controller="Home" asp-action="Index">Unick</a>

                <div class="navbar_wrap">
                    <ul class="navbar_menu">

                        <li><a asp-controller="Account" asp-action="GetTrandAuctionItems">Подборки</a></li>
                        <li>@Html.ActionLink("Интересное","RecomendationAuctions")</li>
                        <li>@Html.ActionLink("Категории","CategoryAuctions")</li>
                        <li>@Html.ActionLink("Стандарты","StandartAuctions")</li>
                        <li>@Html.ActionLink("Поддержка","Support")</li>
      
                    </ul>
                </div>

                <div class="container_account">
                    <img src="./img/ei_search.svg" alt="" srcset="">
                    <a id="my_account_btn" asp-controller="Account" asp-action="LoginWithCookies">MyUnick</a>
                    <div class="notify_wrap"></div>
                </div>

            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
